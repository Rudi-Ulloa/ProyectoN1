<mvc:View controllerName="ProyectoN1.SAPUI5.controller.HolaPanel" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core">
	<Panel headerText="{i18n>holaPanelTitulo}" class="sapUiResponsiveMargin" width="auto">
		<content>
			<Button id="holaDialogButton" 
			icon="sap-icon://action" 
			text="{i18n>openDialogButtontext}" 
			press=".onOpenDialog" 
			class="sapUiSmallMarginEnd"/>
			<Button text="{i18n>showHelloButtonText}" press=".onShowHola" class="sapUiSmallMarginEnd"/>
			<Input value="{/recip/name}" valueLiveUpdate="true" width="60%"/>
			<Text text="Hola {/recip/name}" class="sapUiSmallMargin myStiloCssButton sapTheminglight-asColor"/>
		</content>
	</Panel>
	<core:Fragment fragmentName="ProyectoN1.SAPUI5.view.Form01" type="XML"/>
</mvc:View>